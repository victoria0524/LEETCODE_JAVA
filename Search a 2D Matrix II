class Solution {
    public boolean searchMatrix(int[][] matrix, int target) 
    {
        if (matrix.length==0 || matrix[0].length==0) 
            return false;
        
        int m=matrix.length;
        int n=matrix[0].length;
        if (target < matrix[0][0] || target > matrix[m-1][n-1]) 
            return false;
        
        int i=m-1;
        int j=0;
        
        while(i>=0 &&j<n)
        {
            if(matrix[i][j]==target)
                return true;
            else if(matrix[i][j]>target)
                i--;
            else
                j++;
        }
        
        return false;
    }
}
